<?xml version="1.0" encoding="UTF-8" standalone="no"?><xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:firstElementOfTheInput="catalog" xmlns:notXSLTCompatible="false" xmlns:own="http://ownfunction.org" xmlns:xs="http://www.w3.org/2001/XMLSchema" extension-element-prefixes="own notXSLTCompatible firstElementOfTheInput" version="2.0"><xsl:function name="own:setPrecision"><xsl:param name="resultString"/><xsl:param name="noOfDigits"/><xsl:if test="$noOfDigits=0"><xsl:value-of select="$resultString"/></xsl:if><xsl:if test="$noOfDigits!=0"><xsl:value-of select="own:setPrecision(concat($resultString,'0'),$noOfDigits - 1)"/></xsl:if></xsl:function><xsl:template match="/"><catalog><fullname><xsl:value-of select="concat(catalog/fname,' ',catalog/sname)"/></fullname><author><xsl:value-of select="concat(tokenize(catalog/author,',')[2],' ',tokenize(catalog/author,',')[1])"/></author><title><xsl:value-of select="replace(replace(catalog/title,'\s+$',''),'^\s+','')"/></title><genre><xsl:value-of select="upper-case(catalog/genre)"/></genre><price><xsl:value-of select="number( catalog/price )"/></price><publish_date><xsl:value-of select="catalog/publish_date"/></publish_date><description><xsl:value-of select="catalog/description"/></description></catalog></xsl:template></xsl:stylesheet>